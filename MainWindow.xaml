<Window x:Class="Nummernmerker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nummernmerker"
        mc:Ignorable="d"
        Title="38. BWINF - Aufgabe 2: Nummernmerker" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal">
            <Label Content="Eingabe:" Width="70" />
            <TextBox MaxLength="30" Name="TextBoxNumber" Width="300" Text="" Padding="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
            <Label Content="Ausgabe:" Width="70" />
            <TextBox IsReadOnly="True" Name="TextBoxOutput" Width="300" Text="" Padding="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button Name="ButtonCalc" Content="Berechnen" Height="25" Click="ButtonCalc_Click" Width="100" />
            <Button Name="ButtonClose" Margin="10 0 0 0" Content="Beenden" Height="25" Click="ButtonClose_Click" Width="100" />
        </StackPanel>
    </StackPanel>
</Window>
